@* not working: Error 500 *@ @{
    Layout = "_Layout";
} @using HairSalon.Models
@model List<HairSalon.Models.Client>

<div class="text-center">
  <h1 class="display-4">Client List</h1>

    @if (Model.Count == 0)
    {
      <h3>You currently have no clients</h3>
    }

  <ul>
        @foreach (Client client in Model)
        {
        <li>
                @Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId})
          | client.Stylist.Name
        </li>
        }
  </ul>
  <p>@Html.ActionLink("Add new client", "Create", "Client")</p>
</div>

