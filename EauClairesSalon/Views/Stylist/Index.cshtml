@{
    Layout = "_Layout";
} 


@using EauClairesSalon.Models; 
@model List<EauClairesSalon.Models.Stylist>;

<div class="text-center">
  <h1 class="display-4">Stylist List</h1>
@if (Model.Count == 0){
    <h3>You currently have no stylists</h3>

    
}

<ul>
    @foreach (Stylist stylist in Model)
    {
        <li>
            @Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })
        </li>
    }
</ul>

@if(Model.Count != 0){
@Html.ActionLink("Add new client", "Create", "Client")<br>
}
@Html.ActionLink("Add new stylist", "Create")

</div>