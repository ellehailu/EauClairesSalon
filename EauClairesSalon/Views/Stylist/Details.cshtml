@{
    Layout = "_Layout";
} 

@model EauClairesSalon.Models.Stylist
@using EauClairesSalon.Models


<h2>Stylist Details</h2>

<hr />
<h3>Name: @Html.DisplayFor(model => model.Name)</h3>

@if (@Model.Clients.Count == 0)
{
    <h3> This stylist has no current clients!</h3>
}
else 
{
    <h3>Clients:</h3>
    <ul>
        @foreach (Client client in Model.Clients)
        {
            <li>@Html.ActionLink($"{client.Name}", "Details", "Client", new { id = client.ClientId})</li>
        }
    </ul>
}

<p>@Html.ActionLink("Back to stylist list", "Index")</p>
<p>@Html.ActionLink("Add new client", "Create", "Client")</p>
<p>@Html.ActionLink("Delete this stylist", "Delete")</p>