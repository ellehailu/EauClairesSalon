
@{
    Layout = "_Layout";
}

@using EauClairesSalon.Models
@model List<EauClairesSalon.Models.Client>;

<div class="text-center">
  <h1 class="display-4">Client List</h1>


@if(Model.Count == 0){
    <h3>You currently have no clients</h3>
}

@foreach (Client client in Model){
    <p>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId}) | client.Stylist.Name</p>
}
</div>
